__lua__
local p

function _init()
	p={
		x=60,
		y=70,
		w=16,
		h=16,
		t=0,
		ti=16, --timer interval
		standing=true,
		facing_left=false,
		update=function(self)
			self.t=(self.t+1)%self.ti
			
			self.standing=false
			if btn(0) then
				self.x-=1
				self.facing_left=true
			elseif btn(1) then
				self.x+=1
				self.facing_left=false
			elseif btn(2) then
				self.y-=1
			elseif btn(3) then
				self.y+=1
			else
				self.standing=true
			end
		end,
		draw=function(self)
			palt(0,false)
			palt(6,true)
			local sx=24
			if not self.standing and self.t>self.ti/2 then
				sx=40
			end
			
			local sy=0
			
			sspr(sx,sy,self.w,self.h,self.x,self.y,self.w,self.h,self.facing_left)
		end
	}
end

function _update60()
	p:update()
end

function _draw()
	cls(6)
	p:draw()
end
